<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:cv="clr-namespace:VendingDesktop.Converters"
             xmlns:vm="clr-namespace:VendingDesktop.ViewModels"
             mc:Ignorable="d"
             d:DesignWidth="800" d:DesignHeight="800"
             x:Class="VendingDesktop.Views.VendingMachinesPageView"
             x:DataType="vm:VendingMachinesPageViewModel">

    <UserControl.Resources>
        <cv:RowBackgroundConverter x:Key="RowBackgroundConverter" />
    </UserControl.Resources>

    <Grid RowDefinitions="Auto * Auto" HorizontalAlignment="Center" Width="950" Background="White">
        <!-- Верхняя панель -->
        <Border Grid.Row="0" Background="#f6f6f6" Padding="15">
            <StackPanel>
                <TextBlock Text="Торговые автоматы" FontSize="24" FontWeight="SemiBold" Foreground="DeepSkyBlue" />
                <TextBlock Text="Всего найдено: 9 шт." Foreground="#666" FontSize="14" Margin="0 0 0 20" />
            </StackPanel>
        </Border>

        <!-- Таблица -->
        <Border Grid.Row="1" Padding="10">
            <StackPanel>
                <!-- Панель инструментов -->
                <Grid ColumnDefinitions="Auto * Auto" Margin="0 0 0 20">
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="5" HorizontalAlignment="Left">
                        <TextBlock Text="Показать" VerticalAlignment="Center" />
                        <ComboBox Width="75" SelectedIndex="2">
                            <ComboBoxItem Content="10" />
                            <ComboBoxItem Content="25" />
                            <ComboBoxItem Content="50" />
                            <ComboBoxItem Content="100" />
                        </ComboBox>
                        <TextBlock Text="записей" VerticalAlignment="Center" />
                    </StackPanel>

                    <TextBox Grid.Column="1" Width="250" Watermark="Фильтр" HorizontalAlignment="Center" />

                    <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Добавить" Margin="0 0 10 0" />
                        <Button Content="Экспорт" />
                    </StackPanel>
                </Grid>

                <!-- Таблица -->
                <DataGrid x:Name="MachinesTable" ItemsSource="{Binding Machines}"
                          GridLinesVisibility="Horizontal" CanUserResizeColumns="True" HeadersVisibility="Column">
                    <DataGrid.Styles>
                        <Style Selector="DataGridColumnHeader TextBlock">
                            <Setter Property="Foreground" Value="#37373a" />
                            <Setter Property="TextWrapping" Value="Wrap" />
                            <Setter Property="FontWeight" Value="Bold" />
                            <Setter Property="FontSize" Value="14" />
                            <Setter Property="HorizontalAlignment" Value="Center" />
                            <Setter Property="TextAlignment" Value="Center" />
                        </Style>

                        <Style Selector="DataGridCell TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center" />
                            <Setter Property="TextWrapping" Value="Wrap" />
                            <Setter Property="TextAlignment" Value="Center" />
                        </Style>
                    </DataGrid.Styles>

                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="ID" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="{Binding Index, Converter={StaticResource RowBackgroundConverter}}">
                                        <TextBlock Text="{Binding Machine.Id}" />
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Название" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="{Binding Index, Converter={StaticResource RowBackgroundConverter}}">
                                        <TextBlock Text="{Binding Machine.Name}" />
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Модель" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="{Binding Index, Converter={StaticResource RowBackgroundConverter}}">
                                        <TextBlock Text="{Binding Machine.Model}" />
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Компания" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="{Binding Index, Converter={StaticResource RowBackgroundConverter}}">
                                        <TextBlock Text="{Binding Machine.Manufacturer}" />
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Модем" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="{Binding Index, Converter={StaticResource RowBackgroundConverter}}">
                                        <TextBlock Text="{Binding Machine.Modem}" />
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Адрес / Место" Width="140">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="{Binding Index, Converter={StaticResource RowBackgroundConverter}}">
                                        <TextBlock Text="{Binding Machine.Location}" />
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="В работе с" Width="110">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="{Binding Index, Converter={StaticResource RowBackgroundConverter}}">
                                        <TextBlock Text="{Binding Machine.InWorkSince}" />
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Действия" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Spacing="10" Background="{Binding Index, Converter={StaticResource RowBackgroundConverter}}">
                                        <Button Content="✎" Width="28" Height="28" />
                                        <Button Content="📄" Width="28" Height="28" />
                                        <Button Content="🗑" Width="28" Height="28" />
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Border>

        <!-- Пагинация -->
        <Grid Grid.Row="2" ColumnDefinitions="* *">
            <TextBlock Grid.Column="0" Text="Записи с 1 до 9 из 9 записей" HorizontalAlignment="Left"
                       VerticalAlignment="Center" />

            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10" HorizontalAlignment="Right">
                <Button Content="◀" Width="32" />
                <Button Content="1" Width="32" />
                <Button Content="▶" Width="32" />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>